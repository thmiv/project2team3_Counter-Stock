<div id="home">
  <div class="container">
    <div class="row">
      <div class="col-8 offset-2">
        <h1>{{msg}}</h1>
        <h2>This is our Home Page!</h2>
        <form class="clearfix mb-4" action="POST">
          <div class="form-group">
            <label for="example-text">Username</label>
            <input type="text" id="character-username" class="form-control" aria-describedby="character-username" placeholder="Enter Username">
          </div>
          <div class="form-group">
            <label for="example-text">Password</label>
            <input type="password" id="character-password" class="form-control" aria-describedby="character-password" placeholder="Enter Password">
          </div>
          <div class="form-group">
            <label for="character-stock">Stock Choice</label>
            {{!-- <textarea class="form-control" id="character-stock" aria-describedby="character-stock" placeholder="Enter Stock Ticker"></textarea>            --}}
