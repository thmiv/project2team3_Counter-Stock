              <option>JSMD</option>
              <option>ARVR</option>
              <option>SQLV</option>
              <option>BOSS</option>
              <option>TTAC</option>
              <option>JSML</option>
              <option>FLQS</option>
              <option>SCAP</option>
              <option>XITK</option>
              <option>AAPL</option>
              <option>INTC</option>
              <option>GOOG</option>
              <option>AMZN</option>
              <option>MSFT</option>
              <option>AZO</option>
              <option>PFE</option>
              <option>NFLX</option>
              <option>FB</option>
              <option>BRK-A</option>
              <option>BABA</option>
              <option>JNJ</option>
              <option>JPM</option>
              <option>XOM</option>
              <option>BAC</option>
              <option>WMT</option>
              <option>WFC</option>
              <option>V</option>
              <option>PG</option>
              <option>BUD</option>




          </div>
          <button id="submit" class="btn btn-primary float-right">Submit</button>

        </form>
        <h3>Current Characters: </h3>
        <ul id="character-list" class="list-group">
          {{#each Characters}}
          <li data-id="{{this.id}}" class="list-group-item">
            <a href="characters/{{this.id}}">{{this.text}}</a>
            <button class="btn btn-danger float-right delete">ï½˜</button>
